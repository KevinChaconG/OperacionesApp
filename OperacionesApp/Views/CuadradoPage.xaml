<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OperacionesApp.Views.CuadradoPage"
             Title="Área del Cuadrado">
    
    <VerticalStackLayout Padding="20">
        <Label Text="Lados del Cuadrado" />
        <Entry x:Name="ladoEntry" Keyboard="Numeric" Placeholder="Ingrese el valor de los lados" />

        <Button Text="Calcular Área" Clicked="OnCalcularAreaCuadrado" />
        <Button Text="Limpiar" Clicked="OnLimpiarCuadrado" />

        <Label x:Name="resultadoCuadradoLabel" Text="Resultado: " />
    </VerticalStackLayout>
</ContentPage>
