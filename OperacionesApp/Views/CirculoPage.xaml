<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OperacionesApp.Views.CirculoPage"
             Title="Área del Círculo">
    <VerticalStackLayout Padding="20">
        <Label Text="Radio del Círculo" />
        <Entry x:Name="radioEntry" Keyboard="Numeric" Placeholder="Ingrese el radio" />

        <Button Text="Calcular Área" Clicked="OnCalcularAreaCirculo" />
        <Button Text="Limpiar" Clicked="OnLimpiarCirculo" />

        <Label x:Name="resultadoCirculoLabel" Text="Resultado: " />
    </VerticalStackLayout>
</ContentPage>
